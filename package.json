{
  "name": "cloudflare-fonts",
  "version": "0.0.1",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js"
  },
  "description": "Library for using Cloudflare Fonts with React's SSR",
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsc --project ./tsconfig.esm.json && cpy esm dist",
    "lint": "eslint --fix ./src",
    "lint:fix": "eslint --fix ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "19.0.9",
    "cpy-cli": "^5.0.0",
    "eslint": "9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.1",
    "react": "^19.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "keywords": [
    "cloudflare",
    "react",
    "cloudflare fonts",
    "ssr"
  ],
  "author": "SoraKumo <info@croud.jp>",
  "repository": "https://github.com/ReactLibraries/cloudflare-fonts"
}
